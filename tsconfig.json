{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@src/*": [ "/*" ],
      "meta/*": ["meta/*"],
      "api/*": ["api/*"],
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/__test__"]
}